generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum JenisKelamin {
  LakiLaki
  Perempuan
}

model Penumpang {
  id             String       @id @default(cuid())
  nama           String // maksimal 255 karakter
  usia           Int // usia dalam tahun, minimal 0 dan maksimal 160
  jenisKelamin   JenisKelamin
  tujuan         String // Opsi tujuan 1. Pel Tarjun, 2. Pel Stagen
  tanggal        DateTime // tanggal, format YYYY-MM-DD contoh "2023-10-01"
  jam            DateTime // jam , format HH:MM contoh "14:30 WIB"
  nopol          String // nomor polisi kendaraan, maksimal 15 karakter contoh "AB 1234 CD"
  jenisKendaraan String // jenis kendaraan, maksimal 255 karakter contoh "Avanza", "Toyota", "Civic"
  golongan       String // golongan kendaraan, maksimal 10 karakter buat opsi "I", "II", "III", "IVa", "IVb", "V", "VI", "VII", "VIII", "IX"
  kapal          String // buat opsi kapal 1. KMF Stagen, 2. KMF Tarjun, 3. KMF Benua Raya
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}
