generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum role {
  USER // HANYA BISA AKSES DATA SENDIRI 
  MANAGER // BISA AKSES DATA SEMUA PENUMPANG
  ADMIN // BISA AKSES DATA SEMUA PENUMPANG DAN MENGELOLA DATA USER
}

model User {
  id        String   @id @default(uuid())
  name      String
  role      role
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email], map: "idx_user_email")
  @@index([id], map: "idx_user_id")
  @@index([role], map: "idx_user_role")
}

enum jenisKelamin {
  L
  P
}

enum golongan {
  I
  II
  III
  IVa
  IVb
  V
  VI
  VII
  VIII
  IX
}

model Penumpang {
  id             Int          @id @default(autoincrement()) @db.Integer
  nama           String       @db.VarChar(255)
  usia           Int          @db.SmallInt
  userId         Int          @default(0) @db.Integer
  jenisKelamin   jenisKelamin
  tujuan         String       @db.VarChar(255)
  tanggal        DateTime     @db.Date
  nopol          String       @db.VarChar(15)
  jenisKendaraan String       @db.VarChar(255)
  golongan       golongan
  kapal          String       @db.VarChar(50)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([nama, tujuan, nopol, kapal, jenisKendaraan], map: "idx_penumpang_nama_tujuan_nopol_kapal_jenisKendaraan")
  @@index([id], map: "idx_penumpang_id")
}
