generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email], map: "idx_user_email")
  @@index([id], map: "idx_user_id")
}

model Penumpang {
  id             String   @id @default(nanoid(20)) @db.Char(20)
  nama           String   @db.VarChar(255)
  usia           Int      @db.UnsignedTinyInt
  jenisKelamin   String   @db.Char(1)
  tujuan         String   @db.VarChar(255)
  tanggal        DateTime @db.Date
  nopol          String   @db.VarChar(10)
  jenisKendaraan String   @db.VarChar(255)
  golongan       String   @db.VarChar(4)
  kapal          String   @db.VarChar(50)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([nama], map: "idx_penumpang_nama")
  @@index([id], map: "idx_penumpang_id")
}
